<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password:"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/newPassword_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Your New Password Here" />

    <TextView
        android:id="@+id/newProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Profile Picture:"
        android:textSize="18dp" />

    <com.example.studium_test.CustomNestRadioGroup
        android:id="@+id/selectNewProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/pic1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/pic1"
                android:checked="false"
                android:text="01"
                android:textSize="0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/pic2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/pic2"
                android:text="02"
                android:textSize="0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/pic3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/pic3"
                android:text="03"
                android:textSize="0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/pic4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/pic4"
                android:text="04"
                android:textSize="0sp" />
        </LinearLayout>
    </com.example.studium_test.CustomNestRadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" >

            <Button
                android:id="@+id/Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <Button
                android:id="@+id/Apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>